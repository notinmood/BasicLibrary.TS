{
    "name": "basiclibrary.ts",
    "version": "1.2.1",
    "description": "企业级的TypeScript类库",
    "//main": "main：暴露给外部的入口文件",
    "main": "lib/index.js",
    "//types": "types：暴露给外部的类型定义文件",
    "types": "lib/index.d.ts",
    "//type": "本项目JavaScript代码的模块组织形式，两个取值：module和commonjs",
    "type": "commonjs",
    "files": [
        "dist/",
        "lib/",
        "src/",
        "package.json",
        "LICENSE",
        "README.md"
    ],
    "scripts": {
        "tests": "mocha --require ts-node/register .test/**/*.ts",
        "t": "mocha --require ts-node/register .test/**/*.ts",
        "build": "tsc",
        "b": "tsc",
        "pub": "npm version patch & tsc && npm publish",
        "pall": "git add . && git commit -a -m 'misc' && npm version patch & tsc -p./tsconfig.commonjs.json && tsc -p./tsconfig.esm.json && npm publish"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/notinmood/BasicLibrary.TS.git"
    },
    "author": "",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/notinmood/BasicLibrary.TS/issues"
    },
    "homepage": "https://github.com/notinmood/BasicLibrary.TS#readme",
    "devDependencies": {
        "@types/chai": "^5.0.0",
        "@types/mocha": "^10.0.0",
        "@typescript-eslint/eslint-plugin": "^8.18.0",
        "@typescript-eslint/parser": "^8.18.0",
        "chai": "^5.1.2",
        "eslint": "^9.17.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-node": "^11.1.0",
        "mocha": "^11.0.1",
        "prettier-eslint": "^16.0.0",
        "ts-node": "^10.9.2",
        "typescript": "^5.7.2"
    },
    "dependencies": {},
    "eslintConfig": {
        "root": true,
        "parser": "@typescript-eslint/parser",
        "plugins": [
            "@typescript-eslint"
        ],
        "extends": [
            "eslint:recommended",
            "plugin:@typescript-eslint/recommended",
            "plugin:node/recommended",
            "prettier"
        ],
        "rules": {
            "node/no-unsupported-features/es-syntax": 0,
            "@typescript-eslint/no-explicit-any": 0,
            "no-prototype-builtins": 2,
            "quotes": [
                2,
                "double"
            ],
            "node/no-missing-import": 0,
            "@typescript-eslint/no-inferrable-types": 0
        }
    }
}
